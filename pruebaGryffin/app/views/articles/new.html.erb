<%= render "menu"%>
<section id='newArticle'>
	<h1>Nuevo Articulo</h1>
	
	<%= form_for(@article) do |f| %>
		<% @article.errors.full_messages.each do |message|%>
			<div class="error">
				<%= message %>
			</div>
			
		<%end%>
		<div class="row">
			<%= f.text_field :title, placeholder:"Titulo "%>
		</div>
			<div class="row">
			<%= f.text_field :description, placeholder:"Descripcion "%>
		</div>
		<div class="row">
			<%= f.text_area :body, placeholder:"Articulo", class:"summernote" , as: :summernote%>
		</div>
		<div class="row" style="padding-left:1em;">
			<h2 for="#">Categorias</h2>
		</div>
		<div class="row" style="padding-left:2em;padding-top:0;">
			<% @categories.each do |category| %>
				<%= check_box_tag "categories[]",category.id%> <%= category.name%>
			<%end%>
		</div>
		

		<div class="row">
			<%= f.submit "Guardar", class: "buttonSubmit"%>
		</div>
	<%end%>
	<script>$('.summernote').summernote();</script>
</section>


