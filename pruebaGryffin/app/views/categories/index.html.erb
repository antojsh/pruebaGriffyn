<%= render "articles/menu"%>
<section>
    <p id="notice"><%= notice %></p>

<h1>Lista de Categorias</h1>

<table>
  <thead>
    <tr>
      <th >Nombre</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td ><%= category.name %></td>
        <td ><div style='background:<%= category.color %>; width:30px; height:30px; border-radius:50%;'></div></td>
        <td><%= link_to 'Ver', category %></td>
        <td><%= link_to 'Editar', edit_category_path(category) %></td>
        <td><%= link_to 'Eliminar', category, method: :delete, data: { confirm: 'Estas Seguro ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path %>

</section>
