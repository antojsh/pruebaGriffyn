<%= render "articles/menu"%>
<section>
  <p id="notice"><%= notice %></p>

<h1>Lista de Roles</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td ><%= role.nombre %></td>

        <td><%= link_to 'Editar', edit_role_path(role) %></td>
        <td><%= link_to 'Eliminar', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Role', new_role_path %>

</section>